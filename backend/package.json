{
    "name": "shopi-api",
    "private": true,
    "version": "0.0.0",
    "main": "dist/src/app.js",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "nodemon": "nodemon -r dotenv/config src/app.ts",
        "start": "npm run clean && npm run compile && nodemon --delay 3 -r dotenv/config src/app.ts",
        "startJS": "nodemon --env-file=.env dist/src/app.js",
        "dev": "npm run clean & tsc-watch --onSuccess & npm run startJS",
        "migrate:down": "knex migrate:down"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-session": "^1.18.0",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.9",
        "@types/passport": "^1.0.16",
        "cors": "^2.8.5",
        "eslint": "^8.57.0",
        "knex": "^3.1.0",
        "nodemon": "^3.1.0",
        "pg": "^8.11.5",
        "rimraf": "^5.0.7",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.2.0",
        "tslib": "^2.6.3",
        "typescript": "^5.5.3"
    }
}
