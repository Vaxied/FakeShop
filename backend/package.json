{
    "name": "fake-shop",
    "private": true,
    "version": "0.0.0",
    "main": "dist/src/app.js",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "nodemon": "nodemon -r dotenv/config src/app.ts",
        "start": "npx clean & tsc-watch && nodemon --delay 3 -r dotenv/config src/app.ts",
        "startJS": "nodemon --env-file=.env dist/src/app.js",
        "dev": "npm run clean & tsc-watch --onSuccess & npm run start",
        "knx": "knex --knexfile ./src/database/knexfile.ts",
        "knex:migrate:make": "npm run knx migrate:make -x ts",
        "knex:migrate:down": "npm run knx migrate:down",
        "knex:migrate:up": "npm run knx migrate:up",
        "knex:migrate:rollback": "npm run knx migrate:rollback",
        "knex:migrate:list": "npm run knx migrate:list",
        "knex:migrate:latest": "npm run knx migrate:latest"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-session": "^1.18.0",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.14.9",
        "@types/passport": "^1.0.16",
        "@types/passport-local": "^1.0.38",
        "@types/pg": "^8.11.6",
        "cors": "^2.8.5",
        "eslint": "^8.57.0",
        "knex": "^3.1.0",
        "nodemon": "^3.1.0",
        "pg": "^8.11.5",
        "rimraf": "^5.0.7",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.2.0",
        "tslib": "^2.6.3",
        "typescript": "^5.5.3"
    }
}
